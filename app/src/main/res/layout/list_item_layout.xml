<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="1dp">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:elevation="6dp"
        android:layout_height="160dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:scaleType="centerCrop"
                android:src="@drawable/hiddenfounders"
                android:transitionName="selectedMovie" />

            <View
                android:id="@+id/vw_blacklayer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha=".8"
                android:background="#000000" />

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/grid_item_image"
                android:layout_width="150dp"
                android:layout_height="110dp"
                android:layout_alignParentBottom="false"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="23dp"
                android:scaleType="centerCrop"
                android:src="@drawable/image_placeholder"
                app:riv_border_color="#ffffff"
                app:riv_border_width="2dip" />

            <TextView
                android:id="@+id/grid_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/grid_item_image"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/grid_item_image"
                android:layout_toRightOf="@+id/grid_item_image"
                android:text="Batman Vs Superman"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="normal|bold" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>